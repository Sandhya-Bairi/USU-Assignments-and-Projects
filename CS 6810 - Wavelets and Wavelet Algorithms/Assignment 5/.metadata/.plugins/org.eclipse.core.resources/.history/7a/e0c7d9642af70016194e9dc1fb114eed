package Problem1;

import java.util.Arrays;

public class WaveletAlgos_S17_HW05 {
	static void test01() {
		double[] signal = {1, 2, 3, 4};
		double[] signalCopy = new double[signal.length];
		signalCopy = Arrays.copyOf(signal, signal.length);
		CDF24.ordDWTForNumIters(signal, 1);
		System.out.println();
		CDF24.ordInvDWTForNumIters(signal, 1);
	}
	static void test02() {
		double[] signal = {1, 2, 3, 4, 5, 6, 7, 8};
		CDF24.ordDWTForNumIters(signal, 1);
		System.out.println();
		CDF24.ordInvDWTForNumIters(signal, 1);
	}
	
	static void test03() {
		double[] signal = {1, 2, 3, 4, 5, 6, 7, 8};
		CDF24.ordDWTForNumIters(signal, 2);
		System.out.println();
		CDF24.ordInvDWTForNumIters(signal, 2);
	} 

	public static void main(String[] args) {
		test01();
	}
}