package com.usu.decisionTree;

import java.io.BufferedReader;
import java.io.FileReader;

import com.usu.decisionTree.impurity.EntropyCalculationMethod;

public class HIVData {

	private static String BASE_PATH = "files/";

	public static void main(String[] args) throws Exception {

		DecisionTree<String> tree = new StringDecisionTree();

		DecisionTree.Node<String> tree1 = generateTreeFromFile(tree, "schillingData.txt");
		
		//printTree(tree);
		
		EntropyCalculationMethod impurityCalculationMethod = new EntropyCalculationMethod();
		
		System.out.println("Schilling tree impurity = " + impurityCalculationMethod.calculateImpurity(tree1.getChildren()));
		
		tree = new StringDecisionTree();
		tree1 = generateTreeFromFile(tree, "table.txt");
		
		System.out.println("Toy tree impurity = " + impurityCalculationMethod.calculateImpurity(tree1.getChildren()));
	}

	public static DecisionTree.Node<String> generateTreeFromFile(DecisionTree<String> tree, String fileName) throws Exception {
		String filePath = BASE_PATH + fileName;
		BufferedReader in = new BufferedReader(new FileReader(filePath));
		String line;
		while ((line = in.readLine()) != null) {
			String[] tokens = line.split(",");
			if (tokens.length > 1 && "1".equals(tokens[1])) {
				tree.addNode(tokens[0]);
			} /*else if(tokens.length > 1 ){
				tree.addNode(tokens[0]);
			}*/
		}
		in.close();
		
		return tree.root;
	}
	
