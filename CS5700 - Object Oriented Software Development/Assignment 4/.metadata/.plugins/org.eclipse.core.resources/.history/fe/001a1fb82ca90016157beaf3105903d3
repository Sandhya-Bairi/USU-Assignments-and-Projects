package com.usu.sudokuSolver.main;

import javax.swing.JOptionPane;

import com.usu.sudokuSolver.board.SudokuBoard;
import com.usu.sudokuSolver.board.SudokuBoardParser;

/**
 * @author Anuj Khasgiwala
 *
 */
public class PuzzleSelector {

	public static void main(String[] args) {
		int size = selectPuzzleSize();
		int[][] board = SudokuBoardParser.parse(size);
		new RecursiveBruteSudokuSolver(new SudokuBoard(board));
	}

	private static int selectPuzzleSize() {
		String[] options = new String[] {"4 x 4", "9 x 9", "16 x 16", "25 x 25", "4 x 4 Unsolvable", "9 x 9 Unsolvable"};
		int response = JOptionPane.showOptionDialog(null, "Select size of sudoku puzzle", "", JOptionPane.DEFAULT_OPTION, JOptionPane.QUESTION_MESSAGE, null, options, options[0]);
		System.out.println(response);
		return response;
	}
}