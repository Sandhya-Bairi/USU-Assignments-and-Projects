package com.usu.sudokuSolver.board;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import java.util.StringTokenizer;

/**
 * @author Anuj Khasgiwala
 *
 */
public class SudokuBoardParser {

    public static int[][] parse(String inputFileName) {

        try {
            BufferedReader fileReader = new BufferedReader(new FileReader(inputFileName));
            List<String> lines = new ArrayList<String>();
            String line = null;
            while((line = fileReader.readLine()) != null) {
            	if(!line.isEmpty())
            		lines.add(line);
            }
            fileReader.close();
            int size = lines.size() - 2;
            int[][] board = new int[size][size];
            for(int i = 1; i <= size; i++) {
                StringTokenizer st = new StringTokenizer(lines.get(i));
                int numbTokens = st.countTokens();
                for(int j = 0; j < numbTokens; j++) {
                    String currentToken = st.nextToken();
                    if(currentToken.equals("-"))
                    	board[i - 1][j] = 0;
                    else
                    	board[i - 1][j] = Integer.parseInt(currentToken);
                }
            }

            for(int i = 0; i < board[0].length; i++) {
                for(int j = 0; j < board.length; j++) {
                    System.out.print(board[i][j] + "  ");
                }
                System.out.println();
            }
            return board;
        } catch (IOException e) {
            e.printStackTrace();
            return null;
        }
    }
}