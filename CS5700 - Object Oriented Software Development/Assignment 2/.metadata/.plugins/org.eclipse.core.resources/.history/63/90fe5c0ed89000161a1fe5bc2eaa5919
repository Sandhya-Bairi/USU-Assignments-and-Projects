public class CommunicatorTest {
	
	SimulatorCommunicator scTest = new SimulatorCommunicator(new Portfolio());	
	
	@Test
	public void testMonitoring_StreamStockMessageIsEmpty() {
		try {
			scTest.startUDPPacket();
			StreamStocksMessage startMessage = new StreamStocksMessage();
			scTest.send(startMessage);
			
			TickerMessage tmTest = scTest.receive(0);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
