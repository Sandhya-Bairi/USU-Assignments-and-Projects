package com.usu.stocks.subjectObserver;

import java.util.ArrayList;
import java.util.List;

import com.usu.stocks.Portfolio;

public abstract class StockSubject {
	protected List<StocksObserver> stockObserverList = new ArrayList<StocksObserver>();
	
	/**
	 * 
	 * @param addNewObserver
	 */
	public void registerStockOberserver(StocksObserver addNewObserver) {
		if(addNewObserver == null)
			throw new NullPointerException("Null Observer");
		synchronized (new Object()) {
			if(!stockObserverList.contains(addNewObserver))
				stockObserverList.add(addNewObserver);
		}
	}

	/**
	 * 
	 * @param deleteObserver
	 */
	public abstract void removeStockObserver(StocksObserver deleteObserver);

	/**
	 * 
	 */
	public abstract void notifyStockObserver(Portfolio portfolios);

}